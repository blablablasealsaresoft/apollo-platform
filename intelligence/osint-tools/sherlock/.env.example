# Sherlock OSINT - Environment Configuration
# Copy this file to .env and configure your settings

# Application Settings
SHERLOCK_ENV=production
SHERLOCK_DEBUG=false
SHERLOCK_LOG_LEVEL=INFO

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Search Settings
SHERLOCK_TIMEOUT=10
SHERLOCK_MAX_CONCURRENT=50
SHERLOCK_RATE_LIMIT_DELAY=0.1

# Elasticsearch Configuration
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=sherlock

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=86400

# Neo4j Configuration
NEO4J_ENABLED=true
NEO4J_HOST=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Platform Configuration
PLATFORMS_CONFIG_PATH=platforms_config.json

# Export Settings
EXPORT_DIR=exports
EXPORT_FORMAT=json

# Security
API_KEY=
RATE_LIMIT_PER_MINUTE=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
