# Apollo Intelligence Platform - Production Configuration
# SECURITY WARNING: This file contains sensitive configuration
# Never commit actual secrets to version control
# Use environment variables or secret management tools in production

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# API SERVER
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# ============================================
# SECURITY - REQUIRED
# ============================================
SECRET_KEY=${SECRET_KEY:?Secret key is required (min 64 characters)}

# CORS - MUST be explicitly set in production
CORS_ORIGINS=${CORS_ORIGINS:?CORS origins must be explicitly set}
ALLOWED_HOSTS=${ALLOWED_HOSTS:?Allowed hosts must be explicitly set}

# ============================================
# DATABASE CONNECTIONS - REQUIRED
# ============================================
# PostgreSQL
POSTGRES_HOST=${POSTGRES_HOST:?PostgreSQL host is required}
POSTGRES_PORT=${POSTGRES_PORT:-5432}
POSTGRES_DB=${POSTGRES_DB:?PostgreSQL database is required}
POSTGRES_USER=${POSTGRES_USER:?PostgreSQL user is required}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:?PostgreSQL password is required}
POSTGRES_SSL_MODE=require

# Redis
REDIS_HOST=${REDIS_HOST:?Redis host is required}
REDIS_PORT=${REDIS_PORT:-6379}
REDIS_PASSWORD=${REDIS_PASSWORD:?Redis password is required}
REDIS_DB=0
REDIS_SSL_ENABLED=true

# RabbitMQ
RABBITMQ_HOST=${RABBITMQ_HOST:?RabbitMQ host is required}
RABBITMQ_PORT=${RABBITMQ_PORT:-5672}
RABBITMQ_USER=${RABBITMQ_USER:?RabbitMQ user is required}
RABBITMQ_PASSWORD=${RABBITMQ_PASSWORD:?RabbitMQ password is required}
RABBITMQ_VHOST=/
RABBITMQ_SSL_ENABLED=true

# Elasticsearch
ELASTICSEARCH_HOSTS=${ELASTICSEARCH_HOSTS:?Elasticsearch hosts required}
ELASTICSEARCH_USERNAME=${ELASTICSEARCH_USERNAME:-}
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_PASSWORD:-}
ELASTICSEARCH_SSL_ENABLED=true

# ============================================
# CELERY CONFIGURATION
# ============================================
CELERY_BROKER_URL=${CELERY_BROKER_URL:?Celery broker URL is required}
CELERY_RESULT_BACKEND=${CELERY_RESULT_BACKEND:?Celery result backend is required}
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000
CELERY_TASK_ALWAYS_EAGER=false

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_ENABLED=true

# ============================================
# CACHING
# ============================================
CACHE_TTL=300
CACHE_MAX_SIZE=10000
CACHE_ENABLED=true

# ============================================
# OSINT & RECONNAISSANCE APIs
# Optional - Leave empty if not using
# ============================================
SHODAN_API_KEY=${SHODAN_API_KEY:-}
CENSYS_API_ID=${CENSYS_API_ID:-}
CENSYS_API_SECRET=${CENSYS_API_SECRET:-}
VIRUSTOTAL_API_KEY=${VIRUSTOTAL_API_KEY:-}
SECURITYTRAILS_API_KEY=${SECURITYTRAILS_API_KEY:-}
ALIENVAULT_API_KEY=${ALIENVAULT_API_KEY:-}
HUNTER_IO_API_KEY=${HUNTER_IO_API_KEY:-}

# ============================================
# BREACH DATABASE APIs
# Optional - Sensitive data sources
# ============================================
DEHASHED_API_KEY=${DEHASHED_API_KEY:-}
DEHASHED_EMAIL=${DEHASHED_EMAIL:-}
HIBP_API_KEY=${HIBP_API_KEY:-}
SNUSBASE_API_KEY=${SNUSBASE_API_KEY:-}
LEAKCHECK_API_KEY=${LEAKCHECK_API_KEY:-}

# ============================================
# BLOCKCHAIN APIs
# Optional - Leave empty if not using
# ============================================
ETHERSCAN_API_KEY=${ETHERSCAN_API_KEY:-}
BSCSCAN_API_KEY=${BSCSCAN_API_KEY:-}
POLYGONSCAN_API_KEY=${POLYGONSCAN_API_KEY:-}
BLOCKCHAIR_API_KEY=${BLOCKCHAIR_API_KEY:-}
BLOCKCYPHER_TOKEN=${BLOCKCYPHER_TOKEN:-}
INFURA_PROJECT_ID=${INFURA_PROJECT_ID:-}
ALCHEMY_API_KEY=${ALCHEMY_API_KEY:-}

# ============================================
# SOCIAL MEDIA APIs
# Optional - Leave empty if not using
# ============================================
TWITTER_BEARER_TOKEN=${TWITTER_BEARER_TOKEN:-}
TWITTER_API_KEY=${TWITTER_API_KEY:-}
TWITTER_API_SECRET=${TWITTER_API_SECRET:-}
FACEBOOK_ACCESS_TOKEN=${FACEBOOK_ACCESS_TOKEN:-}
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN:-}

# ============================================
# GEOLOCATION APIs
# Optional - Leave empty if not using
# ============================================
MAXMIND_LICENSE_KEY=${MAXMIND_LICENSE_KEY:-}
MAXMIND_ACCOUNT_ID=${MAXMIND_ACCOUNT_ID:-}
IPINFO_TOKEN=${IPINFO_TOKEN:-}
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID:-}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN:-}

# ============================================
# PROXY SETTINGS
# ============================================
HTTP_PROXY=${HTTP_PROXY:-}
HTTPS_PROXY=${HTTPS_PROXY:-}
NO_PROXY=localhost,127.0.0.1

# ============================================
# RETRY & CIRCUIT BREAKER
# ============================================
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=1.5
RETRY_TIMEOUT=30
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
MAX_CONCURRENT_REQUESTS=50

# ============================================
# DATA RETENTION
# ============================================
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=${SENTRY_DSN:-}
METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SHERLOCK=true
ENABLE_BBOT=true
ENABLE_BLOCKCHAIN=true
ENABLE_BREACH_DB=true
ENABLE_DARKWEB=false
ENABLE_GEOINT=true
ENABLE_SOCMINT=true
ENABLE_PUBLIC_RECORDS=true
ENABLE_FUSION_ENGINE=true

# ============================================
# NOTES
# ============================================
# 1. All variables marked with :? are REQUIRED
# 2. Use environment variables or secret manager for sensitive values
# 3. API keys marked as optional can be left empty
# 4. Dark web features disabled by default in production
# 5. Ensure SSL/TLS is enabled for all database connections
