# ==========================================
# Application Settings
# ==========================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Celery
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Caching
CACHE_TTL=300
CACHE_MAX_SIZE=10000

# Monitoring
SENTRY_DSN=

# ==========================================
# Feature Flags
# ==========================================

ENABLE_SHERLOCK=true
ENABLE_BBOT=true
ENABLE_BLOCKCHAIN=true
ENABLE_BREACH_DB=true
ENABLE_DARKWEB=true
ENABLE_GEOINT=true
ENABLE_SOCMINT=true
ENABLE_PUBLIC_RECORDS=true
ENABLE_FUSION_ENGINE=true

# ==========================================
# Advanced Configuration
# ==========================================

# Proxy Settings
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=1.5
RETRY_TIMEOUT=30

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Batch Processing
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=50

# Data Retention
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# ==========================================
# Notes
# ==========================================
#
# Most APIs offer free tiers with rate limits:
# - Shodan: 1 req/sec (free), 100 req/sec (paid)
# - VirusTotal: 4 req/min (free), 1000 req/day (premium)
# - Etherscan: 5 req/sec (free), 100 req/sec (paid)
# - HIBP: 1 req/1.5sec (free)
# - IP-API: 45 req/min (free), unlimited (paid)
#
# Always respect API rate limits and terms of service
