# Apollo Platform - Production Frontend Configuration
# This file is used during build time for production deployments

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL - MUST be set for production
VITE_API_BASE_URL=${VITE_API_BASE_URL:?API base URL is required}

# WebSocket URL for real-time features
VITE_WS_URL=${VITE_WS_URL:?WebSocket URL is required}

# ============================================
# APPLICATION SETTINGS
# ============================================
VITE_APP_NAME=Apollo Platform
VITE_APP_VERSION=1.0.0
VITE_ENV=production

# ============================================
# FEATURE FLAGS
# ============================================
VITE_ENABLE_MFA=true
VITE_ENABLE_OAUTH=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_WEBSOCKETS=true

# ============================================
# SECURITY SETTINGS
# ============================================
# Session timeout in minutes
VITE_SESSION_TIMEOUT=30

# Idle timeout before warning (minutes)
VITE_IDLE_TIMEOUT=25

# Enable security headers check
VITE_STRICT_SECURITY=true

# ============================================
# MONITORING
# ============================================
# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=${VITE_SENTRY_DSN:-}

# Analytics tracking ID (optional)
VITE_ANALYTICS_ID=${VITE_ANALYTICS_ID:-}

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# UI CONFIGURATION
# ============================================
# Default theme (light/dark)
VITE_DEFAULT_THEME=dark

# Items per page for lists
VITE_DEFAULT_PAGE_SIZE=25

# Maximum file upload size (MB)
VITE_MAX_UPLOAD_SIZE=50

# ============================================
# API TIMEOUTS (milliseconds)
# ============================================
VITE_API_TIMEOUT=30000
VITE_UPLOAD_TIMEOUT=120000

# ============================================
# NOTES
# ============================================
# 1. All VITE_ prefixed variables are exposed to the client
# 2. Never include sensitive secrets in this file
# 3. API URLs should use HTTPS in production
# 4. WebSocket URLs should use WSS in production
