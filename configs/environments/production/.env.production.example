# ===========================================================
# Monitoring & Observability - PRODUCTION
# ===========================================================

# Log Configuration
LOG_LEVEL=info  # info, warn, error (not debug in production)
LOG_FORMAT=json
LOG_FILE=/var/log/apollo/production.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30
LOG_COMPRESS=true

# Sentry - Error tracking
# ⚠️  USE PRODUCTION SENTRY DSN
SENTRY_DSN=https://PRODUCTION-KEY@sentry.io/PROJECT-ID
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1  # Sample 10% of transactions
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Prometheus - Metrics
PROMETHEUS_URL=https://prometheus.production.internal:9090
PROMETHEUS_PUSH_GATEWAY=https://pushgateway.production.internal:9091

# Grafana - Dashboards
GRAFANA_URL=https://grafana.production.internal:3001
GRAFANA_API_KEY=PRODUCTION-GRAFANA-API-KEY

# DataDog - APM (optional)
DATADOG_API_KEY=PRODUCTION-DATADOG-API-KEY
DATADOG_APP_KEY=PRODUCTION-DATADOG-APP-KEY

# ===========================================================
# Feature Flags - PRODUCTION
# ===========================================================

ENABLE_SURVEILLANCE=true
ENABLE_FACIAL_RECOGNITION=true
ENABLE_VOICE_RECOGNITION=true
ENABLE_BLOCKCHAIN_MONITORING=true
ENABLE_SOCIAL_MEDIA_MONITORING=true
ENABLE_DARK_WEB_MONITORING=true
ENABLE_AI_ANALYSIS=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_REAL_TIME_ALERTS=true

# ===========================================================
# Performance & Scaling - PRODUCTION
# ===========================================================

# Worker Configuration
WORKER_THREADS=16  # Scale based on CPU cores
MAX_CONCURRENT_OPERATIONS=50
REQUEST_TIMEOUT=60s
UPLOAD_MAX_SIZE=500mb

# Cache Configuration
CACHE_TTL=1800  # 30 minutes
CACHE_MAX_SIZE=10gb

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_MAX_REQUESTS=100

# Connection Pooling
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_POOL_IDLE_TIMEOUT=30000

# ===========================================================
# SSL/TLS Configuration - PRODUCTION
# ===========================================================

# SSL Certificates
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/apollo.crt
SSL_KEY_PATH=/etc/ssl/private/apollo.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# TLS Settings
TLS_MIN_VERSION=1.3
TLS_CIPHERS=TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256

# ===========================================================
# Security Headers - PRODUCTION
# ===========================================================

# HSTS
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000  # 1 year
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# CORS
CORS_ORIGIN=https://apollo.yourdomain.com
CORS_CREDENTIALS=true

# CSP
CSP_ENABLED=true
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# ===========================================================
# Backup Configuration - PRODUCTION
# ===========================================================

# AWS S3 for backups
AWS_ACCESS_KEY_ID=PRODUCTION-AWS-ACCESS-KEY-ID
AWS_SECRET_ACCESS_KEY=PRODUCTION-AWS-SECRET-ACCESS-KEY
AWS_REGION=us-east-1
AWS_S3_BACKUP_BUCKET=apollo-backups-production

# Backup Schedule
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_TIME=02:00  # 2 AM UTC
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION=true

# ===========================================================
# Compliance & Audit - PRODUCTION
# ===========================================================

# Audit Logging
AUDIT_ENABLED=true
AUDIT_LEVEL=comprehensive
AUDIT_RETENTION_DAYS=2555  # 7 years
AUDIT_ENCRYPTION=true
AUDIT_IMMUTABLE=true

# Compliance Standards
CJIS_COMPLIANT=true
GDPR_COMPLIANT=true
CCPA_COMPLIANT=true
SOC2_COMPLIANT=true
ISO27001_COMPLIANT=true

# ===========================================================
# Data Paths - PRODUCTION
# ===========================================================

DATA_DIR=/mnt/apollo-data
UPLOAD_DIR=/mnt/apollo-data/uploads
TEMP_DIR=/mnt/apollo-data/temp
BACKUP_DIR=/mnt/apollo-data/backups
EVIDENCE_DIR=/mnt/apollo-data/evidence
LOG_DIR=/var/log/apollo

# ===========================================================
# High Availability - PRODUCTION
# ===========================================================

# Cluster Configuration
CLUSTER_ENABLED=true
CLUSTER_NODES=3
CLUSTER_ELECTION_TIMEOUT=1000
CLUSTER_HEARTBEAT_INTERVAL=100

# Load Balancing
LOAD_BALANCER_URL=https://lb.production.internal
HEALTH_CHECK_INTERVAL=10s
HEALTH_CHECK_TIMEOUT=5s

# ===========================================================
# Disaster Recovery - PRODUCTION
# ===========================================================

# DR Site Configuration
DR_ENABLED=true
DR_REPLICATION_LAG=60s  # Maximum acceptable lag
DR_FAILOVER_AUTOMATIC=false  # Manual failover for safety

# Geographic Redundancy
PRIMARY_REGION=us-east-1
DR_REGION=us-west-2

