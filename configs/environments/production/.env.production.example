# Apollo Platform - Production Environment
# ===========================================================
# ⚠️  CRITICAL: COPY THIS FILE TO .env.production
# ⚠️  REPLACE ALL PLACEHOLDER VALUES WITH REAL CREDENTIALS
# ⚠️  NEVER COMMIT .env.production TO VERSION CONTROL
# ===========================================================

NODE_ENV=production
API_PORT=4000
FRONTEND_PORT=3000

# ===========================================================
# Database Configuration - PRODUCTION
# ===========================================================

# PostgreSQL - Primary relational database
# ⚠️  CHANGE DATABASE PASSWORD
DATABASE_URL=postgresql://apollo_admin:CHANGE_ME_STRONG_PASSWORD_HERE@prod-db.internal:5432/apollo

# Neo4j - Graph database for relationship mapping
# ⚠️  CHANGE NEO4J PASSWORD
NEO4J_URI=bolt://prod-neo4j.internal:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_STRONG_NEO4J_PASSWORD

# Redis - Caching and session store
# ⚠️  CHANGE REDIS PASSWORD
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@prod-redis.internal:6379

# Elasticsearch - Full-text search and analytics
# ⚠️  CHANGE ELASTICSEARCH PASSWORD
ELASTICSEARCH_URL=https://prod-elastic.internal:9200
ELASTICSEARCH_USERNAME=apollo
ELASTICSEARCH_PASSWORD=CHANGE_ME_ELASTIC_PASSWORD

# MongoDB - Document store for unstructured data
# ⚠️  CHANGE MONGODB PASSWORD
MONGODB_URL=mongodb://apollo:CHANGE_ME_MONGO_PASSWORD@prod-mongo.internal:27017/apollo

# RabbitMQ - Message queue
# ⚠️  CHANGE RABBITMQ PASSWORD
RABBITMQ_URL=amqp://apollo:CHANGE_ME_RABBITMQ_PASSWORD@prod-rabbit.internal:5672

# TimescaleDB - Time-series data
# ⚠️  CHANGE TIMESCALE PASSWORD
TIMESCALE_URL=postgresql://apollo_admin:CHANGE_ME_TIMESCALE_PASSWORD@prod-timescale.internal:5432/apollo_timeseries

# ===========================================================
# Authentication & Security - PRODUCTION
# ===========================================================

# JWT Configuration
# ⚠️  GENERATE NEW SECRETS - MINIMUM 32 CHARACTERS
# Use: openssl rand -base64 32
JWT_SECRET=GENERATE_STRONG_JWT_SECRET_MIN_32_CHARACTERS_NEVER_REUSE
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_STRONG_REFRESH_SECRET_MIN_32_CHARACTERS
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Session Configuration
# ⚠️  GENERATE NEW SESSION SECRET
SESSION_SECRET=GENERATE_STRONG_SESSION_SECRET_MIN_32_CHARACTERS
SESSION_TIMEOUT=15m  # Shorter timeout for production

# Encryption
# ⚠️  GENERATE AES-256 KEY (32 bytes = 64 hex characters)
# Use: openssl rand -hex 32
ENCRYPTION_KEY=GENERATE_AES_256_ENCRYPTION_KEY_64_HEX_CHARACTERS_HERE
ENCRYPTION_ALGORITHM=aes-256-gcm

# Multi-Factor Authentication
MFA_ENABLED=true
MFA_ISSUER=Apollo Platform
MFA_WINDOW=1

# Password Policy
PASSWORD_MIN_LENGTH=16
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_EXPIRY_DAYS=90
PASSWORD_HISTORY=5

