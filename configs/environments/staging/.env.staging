# Apollo Platform - Staging Environment
# ===========================================================
# Pre-production testing environment
# ===========================================================

NODE_ENV=staging
API_PORT=4000
FRONTEND_PORT=3000

# ===========================================================
# Database Configuration - STAGING
# ===========================================================

# PostgreSQL
DATABASE_URL=postgresql://apollo_admin:CHANGE_ME_STAGING@staging-db.internal:5432/apollo_staging

# Neo4j
NEO4J_URI=bolt://staging-neo4j.internal:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_STAGING

# Redis
REDIS_URL=redis://:CHANGE_ME_STAGING@staging-redis.internal:6379

# Elasticsearch
ELASTICSEARCH_URL=https://staging-elastic.internal:9200
ELASTICSEARCH_USERNAME=apollo
ELASTICSEARCH_PASSWORD=CHANGE_ME_STAGING

# MongoDB
MONGODB_URL=mongodb://apollo:CHANGE_ME_STAGING@staging-mongo.internal:27017/apollo_staging

# RabbitMQ
RABBITMQ_URL=amqp://apollo:CHANGE_ME_STAGING@staging-rabbit.internal:5672

# TimescaleDB
TIMESCALE_URL=postgresql://apollo_admin:CHANGE_ME_STAGING@staging-timescale.internal:5432/apollo_timeseries_staging

# ===========================================================
# Authentication & Security - STAGING
# ===========================================================

# JWT Configuration
JWT_SECRET=GENERATE_STAGING_JWT_SECRET_MIN_32_CHARACTERS
JWT_REFRESH_SECRET=GENERATE_STAGING_REFRESH_SECRET_MIN_32_CHARACTERS
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Session Configuration
SESSION_SECRET=GENERATE_STAGING_SESSION_SECRET
SESSION_TIMEOUT=20m

# Encryption
ENCRYPTION_KEY=GENERATE_STAGING_AES_256_KEY_64_HEX_CHARACTERS
ENCRYPTION_ALGORITHM=aes-256-gcm

# MFA (Optional in staging)
MFA_ENABLED=false

# ===========================================================
# AI Model API Keys - STAGING
# ===========================================================

OPENROUTER_API_KEY=sk-or-v1-STAGING-KEY
OPENAI_API_KEY=sk-STAGING-OPENAI-KEY
ANTHROPIC_API_KEY=sk-ant-STAGING-ANTHROPIC-KEY
GOOGLE_AI_API_KEY=STAGING-GOOGLE-AI-KEY
DEEPSEEK_API_KEY=STAGING-DEEPSEEK-KEY
GROQ_API_KEY=gsk_STAGING-GROQ-KEY

# ===========================================================
# Surveillance System - STAGING
# ===========================================================

FACE_DATABASE_PATH=/mnt/staging-data/face_database/ignatova_face_encodings.npy
FACE_RECOGNITION_THRESHOLD=0.65
FACE_RECOGNITION_MODEL=cnn

VOICE_DATABASE_PATH=/mnt/staging-data/voice_database/ignatova_voiceprint.npy
VOICE_RECOGNITION_THRESHOLD=0.75

CAMERA_FEED_CONFIG=/mnt/staging-data/config/camera_feeds.json
CAMERA_FEED_ENABLED=true

USE_GPU=true
CUDA_VISIBLE_DEVICES=0

# ===========================================================
# Blockchain & Cryptocurrency APIs - STAGING
# ===========================================================

BLOCKCHAIN_API_KEY=STAGING-BLOCKCHAIN-KEY
ETHERSCAN_API_KEY=STAGING-ETHERSCAN-KEY
COINGECKO_API_KEY=STAGING-COINGECKO-KEY

# ===========================================================
# OSINT & Intelligence APIs - STAGING
# ===========================================================

DEHASHED_API_KEY=STAGING-DEHASHED-KEY
DEHASHED_USERNAME=STAGING-DEHASHED-USERNAME
HIBP_API_KEY=STAGING-HIBP-KEY
HUNTERIO_API_KEY=STAGING-HUNTERIO-KEY
SHODAN_API_KEY=STAGING-SHODAN-KEY
VIRUSTOTAL_API_KEY=STAGING-VIRUSTOTAL-KEY

# ===========================================================
# Social Media APIs - STAGING
# ===========================================================

TWITTER_API_KEY=STAGING-TWITTER-API-KEY
TWITTER_API_SECRET=STAGING-TWITTER-API-SECRET
TWITTER_BEARER_TOKEN=STAGING-TWITTER-BEARER-TOKEN

# ===========================================================
# Communication & Notifications - STAGING
# ===========================================================

SMTP_HOST=smtp.staging-email-provider.com
SMTP_PORT=587
SMTP_USER=staging-email@yourdomain.com
SMTP_PASSWORD=STAGING-EMAIL-PASSWORD
SMTP_FROM=Apollo Staging <noreply-staging@yourdomain.com>

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/STAGING/WEBHOOK/URL
SLACK_ALERTS_CHANNEL=#apollo-alerts-staging

DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/STAGING/WEBHOOK/URL

# ===========================================================
# Monitoring & Observability - STAGING
# ===========================================================

LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/apollo/staging.log

SENTRY_DSN=https://STAGING-KEY@sentry.io/PROJECT-ID
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.3

PROMETHEUS_URL=https://prometheus.staging.internal:9090
GRAFANA_URL=https://grafana.staging.internal:3001

# ===========================================================
# Feature Flags - STAGING
# ===========================================================

ENABLE_SURVEILLANCE=true
ENABLE_FACIAL_RECOGNITION=true
ENABLE_VOICE_RECOGNITION=true
ENABLE_BLOCKCHAIN_MONITORING=true
ENABLE_SOCIAL_MEDIA_MONITORING=true
ENABLE_DARK_WEB_MONITORING=true
ENABLE_AI_ANALYSIS=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_REAL_TIME_ALERTS=true

# ===========================================================
# Performance & Scaling - STAGING
# ===========================================================

WORKER_THREADS=8
MAX_CONCURRENT_OPERATIONS=30
REQUEST_TIMEOUT=60s
UPLOAD_MAX_SIZE=500mb

CACHE_TTL=1800
CACHE_MAX_SIZE=5gb

RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================================
# SSL/TLS Configuration - STAGING
# ===========================================================

SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key
TLS_MIN_VERSION=1.2

# ===========================================================
# Data Paths - STAGING
# ===========================================================

DATA_DIR=/mnt/staging-data
UPLOAD_DIR=/mnt/staging-data/uploads
TEMP_DIR=/mnt/staging-data/temp
BACKUP_DIR=/mnt/staging-data/backups
EVIDENCE_DIR=/mnt/staging-data/evidence

# ===========================================================
# Case Configuration
# ===========================================================

TARGET_NAME=Ruja Ignatova
CASE_ID=IGNATOVA-2024-001-STAGING
CASE_PRIORITY=CRITICAL
