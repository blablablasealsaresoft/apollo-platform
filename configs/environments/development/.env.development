MAX_CONCURRENT_OPERATIONS=10
REQUEST_TIMEOUT=30s
UPLOAD_MAX_SIZE=100mb

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1gb

# Rate Limiting
