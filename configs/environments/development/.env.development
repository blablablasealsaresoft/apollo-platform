VERBOSE_LOGGING=true
ENABLE_QUERY_LOGGING=true
ENABLE_PROFILING=true

# Test Data
USE_MOCK_DATA=false
SEED_DATABASE=true
ENABLE_TEST_ROUTES=true

# CORS
