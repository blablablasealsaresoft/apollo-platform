# ===========================================================
# Logging & Monitoring
# ===========================================================

# Log Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=c:/SECURE_THREAT_INTEL/YoureGunnaHAveToShootMeToStopME/apollo/logs/dev/apollo.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10

# Error Tracking (Sentry)
