{
  "name": "@apollo/reporting-service",
  "version": "1.0.0",
  "description": "Apollo Intelligence Platform - Reporting and Document Generation Service",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "apollo",
    "intelligence",
    "reporting",
    "pdf",
    "docx",
    "excel",
    "document-generation"
  ],
  "author": "Apollo Intelligence Platform",
  "license": "PROPRIETARY",
  "dependencies": {
    "@apollo/shared": "workspace:*",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "express": "^4.18.2",
    "exceljs": "^4.4.0",
    "helmet": "^7.1.0",
    "marked": "^12.0.0",
    "node-cron": "^3.0.3",
    "pdfkit": "^0.15.0",
    "puppeteer": "^22.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.13.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apollo-intelligence/apollo-platform.git",
    "directory": "services/reporting"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ]
}
