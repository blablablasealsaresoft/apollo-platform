# Apollo Platform - Docker Compose Environment Configuration
# Copy this file to .env and customize as needed

# ================================
# General Settings
# ================================
COMPOSE_PROJECT_NAME=apollo
NODE_ENV=development

# ================================
# PostgreSQL Configuration
# ================================
DB_NAME=apollo
DB_USER=apollo
DB_PASSWORD=apollo_password
DB_PORT=5432

# ================================
# TimescaleDB Configuration
# ================================
TIMESCALE_DB=apollo_ts
TIMESCALE_PORT=5433

# ================================
# Neo4j Configuration
# ================================
NEO4J_PASSWORD=apollo_password

# ================================
# Redis Configuration
# ================================
REDIS_PORT=6379

# ================================
# Elasticsearch Configuration
# ================================
ES_JAVA_OPTS=-Xms1g -Xmx1g

# ================================
# Weaviate Configuration
# ================================
WEAVIATE_PORT=8088

# ================================
# RabbitMQ Configuration
# ================================
RABBITMQ_USER=apollo
RABBITMQ_PASSWORD=apollo_password
RABBITMQ_VHOST=apollo
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# ================================
# Monitoring Configuration
# ================================
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ================================
# PgAdmin Configuration
# ================================
PGADMIN_EMAIL=admin@apollo.local
PGADMIN_PASSWORD=admin

# ================================
# JWT Configuration
# ================================
JWT_SECRET=apollo_jwt_secret_key_minimum_32_characters_long_2026
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ================================
# API Configuration
# ================================
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# ================================
# Service URLs (Internal Docker Network)
# ================================
DATABASE_URL=postgresql://apollo:apollo_password@postgresql:5432/apollo
REDIS_URL=redis://redis:6379
ELASTICSEARCH_URL=http://elasticsearch:9200
NEO4J_URL=bolt://neo4j:7687
RABBITMQ_URL=amqp://apollo:apollo_password@rabbitmq:5672/apollo

# ================================
# AI/ML Configuration (Optional)
# ================================
OPENROUTER_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ================================
# Development Settings
# ================================
LOG_LEVEL=debug
DEBUG=apollo:*
