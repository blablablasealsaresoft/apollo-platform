# Apollo Red Team Platform - Environment Configuration
# COPY THIS FILE TO .env AND CONFIGURE

# ============================================================================
# LEGAL DISCLAIMER ACKNOWLEDGMENT
# ============================================================================
# You MUST set this to acknowledge you have read and accepted the legal disclaimer
# ONLY set this if you have proper authorization
DISCLAIMER_ACK=I_ACKNOWLEDGE_AND_ACCEPT

# ============================================================================
# API Configuration
# ============================================================================
API_KEY=your-secure-api-key-change-this
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://apollo:apollo_secure_pass@localhost:5432/apollo_redteam
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=

# ============================================================================
# C2 Framework Configuration
# ============================================================================

# Sliver C2
SLIVER_HOST=localhost
SLIVER_PORT=31337
SLIVER_MTLS_CERT=/path/to/sliver.crt
SLIVER_MTLS_KEY=/path/to/sliver.key

# Havoc C2
HAVOC_HOST=localhost
HAVOC_PORT=40056
HAVOC_API_KEY=

# Mythic C2
MYTHIC_HOST=localhost
MYTHIC_PORT=7443
MYTHIC_API_KEY=

# ============================================================================
# Metasploit Configuration
# ============================================================================
METASPLOIT_RPC_HOST=localhost
METASPLOIT_RPC_PORT=55553
METASPLOIT_RPC_USER=msf
METASPLOIT_RPC_PASS=

# ============================================================================
# Gophish Configuration
# ============================================================================
GOPHISH_API_URL=http://localhost:3333
GOPHISH_API_KEY=

# ============================================================================
# Tool Paths
# ============================================================================
NMAP_PATH=/usr/bin/nmap
MASSCAN_PATH=/usr/bin/masscan
SQLMAP_PATH=/usr/bin/sqlmap
HASHCAT_PATH=/usr/bin/hashcat

# ============================================================================
# Storage Configuration
# ============================================================================
DATA_DIR=/app/redteam/data
REPORT_DIR=/app/redteam/reports
SCREENSHOT_DIR=/app/redteam/screenshots
EVIDENCE_DIR=/app/redteam/evidence

# ============================================================================
# Operational Security
# ============================================================================
# Authorized operator identity
OPERATOR_NAME=
OPERATOR_ID=
OPERATOR_ORGANIZATION=

# Default authorization duration (hours)
DEFAULT_AUTH_DURATION=24

# Enable strict scope checking
STRICT_SCOPE_CHECKING=true

# Enable audit logging
AUDIT_LOGGING_ENABLED=true

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_SCANNING=100
RATE_LIMIT_EXPLOITATION=10
RATE_LIMIT_C2_TASKS=50

# ============================================================================
# Security Settings
# ============================================================================
# Session timeout (minutes)
SESSION_TIMEOUT=60

# Maximum concurrent operations
MAX_CONCURRENT_OPERATIONS=10

# Enable encryption for stored data
ENCRYPT_STORED_DATA=true

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/apollo-redteam.log

# ============================================================================
# Monitoring & Alerting
# ============================================================================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

ALERTING_EMAIL=security@example.com
ALERTING_SLACK_WEBHOOK=

# ============================================================================
# Development Settings (DO NOT USE IN PRODUCTION)
# ============================================================================
DEBUG=false
DEVELOPMENT_MODE=false
